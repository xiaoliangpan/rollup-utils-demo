root = true  # 根配置

[*]  # 所有文件的通用配置
charset = utf-8  # 字符集为 UTF-8
indent_style = space  # 缩进风格为空格
indent_size = 2  # 缩进大小为2个空格
insert_final_newline = true  # 在文件末尾插入最终的换行符
trim_trailing_whitespace = true  # 去除行末尾的空白字符

[*.md]  # Markdown 文件的配置
max_line-length = off  # 关闭最大行长度限制
trim_trailing_whitespace = false  # 不去除行末尾的空白字符
