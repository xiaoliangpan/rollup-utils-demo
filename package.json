{
  "name": "@vdemo/rollup-utils-demo",
  "version": "1.0.16",
  "description": "rollup-utils-demo,基于rollup的工具库工程化打包配置demo",
  "main": "dist/lib/index.js",
  "module": "dist/es/index.js",
  "types": "dist/es/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && rollup -c rollup.config.mts --configPlugin @rollup/plugin-typescript",
    "commit": "git-cz",
    "lint": "eslint . --ext '.js,.ts' --fix",
    "prepublishOnly": "pnpm run build",
    "release:version": "pnpm run build && bumpp --commit --tag --push",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release": "pnpm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:xiaoliangpan/rollup-utils-demo.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "rollup",
    "commitlint",
    "husky",
    "CHANGELOG",
    "LICENSE",
    "ESlint",
    "utils-demo"
  ],
  "files": [
    "dist",
    "README",
    "LICENSE"
  ],
  "author": "Vilin",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/runtime-corejs3": "^7.23.9",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "bumpp": "^9.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --ext .ts 'src/**/*.ts' --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
